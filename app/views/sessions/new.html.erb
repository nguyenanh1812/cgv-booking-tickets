<title>Đăng nhập</title>
<div class="cgv-login-register-form">
    <div class="r-login">
    <h2><span id="form-login-content" class="active">Đăng nhập</span><span id="form-register-content">
    <%= link_to "Đăng ký", new_user_path %></li></span></h2>
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
            <br>
            <%= f.label :mật_khẩu %>
            <%= f.password_field :password, class: 'form-control' %>
            
            
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Nhớ tài khoản trên máy tính này</span>
            <% end %>
               
            <%= f.submit "Log in", class: "btn btn-primary" %>
            <%= link_to "Quên mật khẩu?", new_password_reset_path %>
        <% end %>
    </div>
</div>
